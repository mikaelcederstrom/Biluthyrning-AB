@model Biluthyrning_AB.Models.ViewModels.CustomersListOfAll[]



<div class="container">
    <div class="row" style="background-color: lightgray">
        <div class="col-sm">
            Personnummer
        </div>
        <div class="col-sm">
            Efternamn
        </div>
        <div class="col-sm">
            Förnamn
        </div>
        <div class="col-sm">
            Aktiv hyrning?
        </div>
    </div>
    @for (int i = 0; i < Model.Length; i++)
    {
            <div class="row" style="background-color: @(i % 2 == 0 ? "bisque" : "white")">
                <div class="col-sm">
                    <a asp-controller="Customers" asp-action="Details" asp-route-id="@Model[i].ID"> @Model[i].PersonNumber</a>
                </div>
                <div class="col-sm">
                    @Model[i].LastName
                </div>
                <div class="col-sm">
                    @Model[i].FirstName
                </div>
                <div class="col-sm">
                    @if (@Model[i].ActiveOrder == true)
                    {
                        <span>Ja</span>
                    }
                    @if (@Model[i].ActiveOrder == false)
                    {
                        <span>Nej</span>
                    }
                </div>
            </div>      
    }

</div>