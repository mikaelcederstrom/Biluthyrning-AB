@model Biluthyrning_AB.Models.ViewModels.CustomersDetailsVM
@{
    ViewData["Title"] = "Detail";
}
<partial name="_MenuBarCustomers" />

<h3 style="text-align: center">Personuppgfiter</h3>
<div class="container">
    <div class="row" style="background-color: lightgray">
        <div class="col-sm">
            Personnummer
        </div>
        <div class="col-sm">
            Efternamn
        </div>
        <div class="col-sm">
            Förnamn
        </div>
        <div class="col-sm">
            AnvändarID
        </div>
        <div class="col-sm">
            Medlemsnivå
        </div>
    </div>
    <div class="row" style="background-color: bisque">

        <div class="col-sm">
            @Model.PersonNumber
        </div>
        <div class="col-sm">
            @Model.LastName
        </div>
        <div class="col-sm">
            @Model.FirstName
        </div>
        <div class="col-sm">
            @Model.Id
        </div>        
        <div class="col-sm">
            @switch (@Model.MembershipLevel)
            {
                case 0:<span>Standard</span>
                    break;
                case 1: <span>Brons</span>
                    break;
                case 2: <span>Silver</span>
                    break;
                case 3: <span>Guld</span>
                    break;

            }
        </div>

    </div>
    <br />
    <br />
    <br />

    <h3 style="text-align: center">Hyrhistorik</h3>
    <div class="row" style="background-color: lightgray">
        <div class="col-sm">
            OrderID
        </div>
        <div class="col-sm">
            Mätarställning före uthyrning (km)
        </div>
        <div class="col-sm">
            Mätarställning efter uthyrning (km)
        </div>
        <div class="col-sm">
            Hyrd (Datum)
        </div>
        <div class="col-sm">
            Återlämnad (Datum)
        </div>

    </div>
    @for (int i = 0; i < Model.Orders.Length; i++)
    {
        if (Model.Orders[i].CarReturned == true)
        {
            <div class="row" style="background-color: @(i % 2 == 0 ? "bisque" : "white")">

                <div class="col-sm">
                    @Model.Orders[i].Id
                </div>
                <div class="col-sm">
                    @Model.Orders[i].KilometerBeforeRental
                </div>
                <div class="col-sm">
                    @Model.Orders[i].KilometerAfterRental
                </div>
                <div class="col-sm">
                    @Model.Orders[i].RentalDate
                </div>
                <div class="col-sm">
                    @Model.Orders[i].ReturnDate
                </div>
            </div>
        }
            }
    <br />
    <br />
    <br />
    <h3 style="text-align: center">Aktiva hyrningar</h3>
    <div class="row" style="background-color: lightgray">
        <div class="col-sm">
            OrderID
        </div>
        <div class="col-sm">
            Mätarställning före uthyrning (km)
        </div>
        <div class="col-sm">
        </div>
        <div class="col-sm">
            Hyrd (Datum)
        </div>
        <div class="col-sm">
            Beräknad återlämningsdag
        </div>
    </div>
    @for (int i = 0; i < Model.Orders.Length; i++)
    {
        if (Model.Orders[i].CarReturned == false)
        {
            <div class="row" style="background-color: @(i % 2 == 0 ? "bisque" : "white")">

                <div class="col-sm">
                    @Model.Orders[i].Id
                </div>
                <div class="col-sm">
                    @Model.Orders[i].KilometerBeforeRental
                </div>
                <div class="col-sm">
                </div>
                <div class="col-sm">
                    @Model.Orders[i].RentalDate
                </div>
                <div class="col-sm">
                    @Model.Orders[i].ReturnDate
                </div>
            </div>
        }
    }
</div>

