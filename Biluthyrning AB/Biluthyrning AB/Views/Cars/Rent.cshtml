@model Biluthyrning_AB.Models.ViewModels.CarsRentVM

@{
    ViewData["Title"] = "Rent";
}

@if (!string.IsNullOrEmpty(Model.TempMessage))
{
    <div><h4>@Model.TempMessage</h4></div>
    <br />
}

<form asp-controller="Cars" asp-action="Rent" method="post">


    <label asp-for="ListOfCarTypes"></label>
    <select asp-for="SelectedCarTypeValue"
            asp-items="Model.ListOfCarTypes"></select>
    <span asp-validation-for="SelectedCarTypeValue"></span>

    <label asp-for="personNumber"></label>
    <input asp-for="personNumber" />
    <span asp-validation-for="personNumber"> </span>


    <label asp-for="Date"></label>
    <input asp-for="Date" />
    @*<label>Datum för uthyrning</label>
        <input type="date" asp-for="Date" />*@
    <span asp-validation-for="Date"></span>




    <br />
    <input type="submit" value="Add" />
</form>

