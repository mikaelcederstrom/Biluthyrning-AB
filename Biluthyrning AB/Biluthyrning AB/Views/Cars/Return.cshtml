        <label asp-for="Kilometer"></label><br />
        <input asp-for="Kilometer" style="width: 165px"/><br />
        <span asp-validation-for="Kilometer"> </span>

        <label asp-for="OrderNumber"></label><br />
        <input asp-for="OrderNumber" style="width: 165px"/><br />
        <span asp-validation-for="OrderNumber"> </span>


        <label asp-for="Date"></label><br />
        <input asp-for="Date" /><br />

        <span asp-validation-for="Date"></span>


        <br />
        <input type="submit" value="Lämna tillbaka" />
    </form>
    </div>