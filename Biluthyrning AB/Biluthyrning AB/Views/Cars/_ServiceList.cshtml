@model Biluthyrning_AB.Models.ViewModels.CarServiceVM[]

<div class="container">
    <div class="row" style="background-color: lightgray">
        <div class="col-sm">
            Biltyp
        </div>
        <div class="col-sm">
            RegNr
        </div>
        <div class="col-sm">
            Kilometer
        </div>
        <div class="col-sm">
            Inlämnad för service
        </div>
        <div class="col-sm">
            Service utförd
        </div>
    </div>

    @for (int i = 0; i < Model.Length; i++)
    {
        if (i % 2 == 0)
        {
            <div class="row" style="background-color: bisque">
                <div class="col-sm">
                    @Model[i].CarType
                </div>
                <div class="col-sm">
                    @Model[i].Registrationnumber
                </div>
                <div class="col-sm">
                    @Model[i].Kilometer
                </div>
                <div class="col-sm">
                    @Model[i].FlaggedForServiceDate
                </div>
                <div class="col-sm">
                    @if (@Model[i].ServiceDone == true)
                    {
                        <span>Ja, @Model[i].ServiceDoneDate</span>
                    }
                    @if (@Model[i].ServiceDone == false)
                    {
                        <form asp-controller="Cars" asp-action="Service" asp-route-id="@Model[i].Id" method="post">
                            <input type="submit" value="Serva" />
                        </form>
                    }
                </div>
            </div>
        }

        if (i % 2 == 1)
        {
            <div class="row" style="background-color: bisque">
                <div class="col-sm">
                    @Model[i].CarType
                </div>
                <div class="col-sm">
                    @Model[i].Registrationnumber
                </div>
                <div class="col-sm">
                    @Model[i].Kilometer
                </div>
                <div class="col-sm">
                    @Model[i].FlaggedForServiceDate
                </div>
                <div class="col-sm">
                    @if (@Model[i].ServiceDone == true)
                    {
                        <span>Ja, @Model[i].ServiceDoneDate</span>
                    }
                    @if (@Model[i].ServiceDone == false)
                    {
                        <form asp-controller="Cars" asp-action="Service" asp-route-id="@Model[i].Id" method="post">
                            <input type="submit" value="Serva" />
                        </form>
                    }
                </div>
            </div>
        }
    }
</div>